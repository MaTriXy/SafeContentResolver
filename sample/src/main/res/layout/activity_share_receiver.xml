<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="de.cketti.safecontentresolver.sample.ShareReceiverActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/listSeparatorTextViewStyle"
        android:layout_marginBottom="8dp"
        android:text="EXTRA_STREAM" />

    <TextView
        android:id="@+id/extraStreamValue"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="file:///data/data/de.cketti.safecontentresolver.sample/files/internal.dat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/listSeparatorTextViewStyle"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Stream contents (ContentResolver)" />

    <TextView
        android:id="@+id/extraStreamContentsTraditional"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus vel lorem sit amet quam bibendum faucibus eu a tortor. In sit amet justo nibh. Donec aliquam metus laoreet felis sollicitudin interdum." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/listSeparatorTextViewStyle"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Stream contents (SafeContentResolver)" />

    <TextView
        android:id="@+id/extraStreamContentsSafe"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus vel lorem sit amet quam bibendum faucibus eu a tortor. In sit amet justo nibh. Donec aliquam metus laoreet felis sollicitudin interdum." />

</LinearLayout>
